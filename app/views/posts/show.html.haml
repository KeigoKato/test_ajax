%p#notice= notice
%p
  %strong Title:
  = @post.title
%p
  %strong Body:
  = @post.body
= link_to 'Edit', edit_post_path(@post)
|
= link_to 'Back', posts_path



%div
  = render "comments", comments: @comments

%div
  = form_for [@post, @comment] do |f|
    %h4 Write a comment
    = f.label :nickname
    = f.text_field :nickname
    = f.label :comment
    = f.text_area :comment
    = f.submit "コメント"
